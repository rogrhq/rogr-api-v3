modules = ["python-3.10"]
run = "uvicorn main:app --host 0.0.0.0 --port 8000"

[env]
# Phase 1.3 Feature Flag Integration - Environment Variables
USE_PARALLEL_EVIDENCE = "false"  # Set to "true" to use parallel evidence system
USE_EEG_PHASE_1 = "true"         # EEG Phase 1 methodology search (legacy system)
USE_EVIDENCE_SHEPHERD = "true"   # Evidence Shepherd integration

[nix]
channel = "stable-25_05"
packages = ["libxcrypt"]

[deployment]
run = ["sh", "-c", "run"]

[[ports]]
localPort = 8000
externalPort = 80
